{
	"name": "microapps",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start": "concurrently \"npm run serve:dev:ecommerce\" \"npm run serve:dev:account\"",
		"serve:dev:ecommerce": "webpack serve --config ecommerce/webpack.config.js",
		"serve:dev:account": "webpack serve --config account/webpack.config.js",
		"serve:ecommerce": "npx serve ./dist/microapps/ecommerce -l 3001",
		"serve:account": "npx serve ./dist/microapps/account -l 3002",
		"build:all": "concurrently \"npm run build:ecommerce\" \"npm run build:account\"",
		"build:ecommerce": "webpack --config ecommerce/webpack.config.js",
		"build:account": "webpack --config account/webpack.config.js",
		"build:all:json": "concurrently \"npm run build:ecommerce:json\" \"npm run build:account:json\"",
		"build:ecommerce:json": "webpack --config ecommerce/webpack-json.config.js",
		"build:account:json": "webpack --config account/webpack-json.config.js"
	},
	"author": "Abhishekh Gupta",
	"license": "ISC",
	"dependencies": {
		"@babel/runtime": "^7.24.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.22.3"
	},
	"devDependencies": {
		"@babel/core": "^7.24.4",
		"@babel/plugin-transform-runtime": "^7.24.3",
		"@babel/preset-env": "^7.24.4",
		"@babel/preset-react": "^7.24.1",
		"@headlessui/react": "^1.7.18",
		"@heroicons/react": "^2.1.3",
		"autoprefixer": "^10.4.19",
		"babel-loader": "^9.1.3",
		"classnames": "^2.5.1",
		"concurrently": "^8.2.2",
		"css-loader": "^7.0.0",
		"history": "^5.3.0",
		"html-webpack-plugin": "^5.6.0",
		"postcss": "^8.4.38",
		"postcss-loader": "^8.1.1",
		"postcss-preset-env": "^9.5.4",
		"prettier": "^3.2.5",
		"serve": "^14.2.1",
		"style-loader": "^4.0.0",
		"tailwindcss": "^3.4.3",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.0.4"
	}
}
